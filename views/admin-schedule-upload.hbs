        <form action='/admin/upload-schedule' method='POST' enctype="multipart/form-data">
            <label for="schedule"><b>Upload CSV of Schedule</b></label>
            <br>
            <input type="file" name="schedule">
            <br>
            <button type="submit" class="btn btn-outline-dark town-select-btn">Submit</button>
        </form>
    </div>

